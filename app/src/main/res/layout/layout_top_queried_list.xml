<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/roundTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scaleType="fitCenter"
    android:src="@drawable/profile_pic"
    app:riv_border_color="#333333"
    app:riv_border_width="2dip"
    app:riv_corner_radius="30dip"
    app:riv_mutate_background="true"
    app:riv_oval="true"
    app:riv_tile_mode="repeat" />
    <TextView
        android:id="@+id/tvCallsigntop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="9W2WTF"
        android:textColor="@color/label_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginLeft="8dip"


        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/roundTextView"
        android:layout_toEndOf="@+id/roundTextView" />

    <TextView
        android:id="@+id/tvCallsignnumquery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="10 queries"

        android:layout_alignBaseline="@+id/tvCallsigntop"
        android:layout_alignBottom="@+id/tvCallsigntop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
