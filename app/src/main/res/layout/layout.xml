<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin2"
    android:paddingRight="@dimen/activity_horizontal_margin2"

    >

    <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/roundView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/profile_pic"
        app:riv_border_color="#333333"
        app:riv_border_width="2dip"
        app:riv_corner_radius="30dip"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        app:riv_tile_mode="repeat" />

    <TextView
        android:id="@+id/tvCallsignrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/roundView"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/roundView"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="9W2WTF"
        android:textColor="@color/label_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"

        />

    <TextView
        android:id="@+id/tvHandlerow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCallsignrow"
        android:layout_below="@+id/tvCallsignrow"


        android:text="MOHAMMAD HAFIZ BIN ISMAIL"
        android:textColor="@color/label_value" />


</RelativeLayout>
